{{#post}}
<article class="article">
    <div class="main-container">
        <div class="article-header">
            <h1 class="article-title">
                {{title}}
            </h1>
            <div class="article-date article-tags">
                {{date format='DD MMMM YYYY'}}
                <span class="taglist">{{tags separator=" " prefix=" &middot; "}}</span>
            </div>
            <div class="ghost-authed">
                <div id="ghost-edit-page" class="edit-button link-logo"></div>
            </div>
        </div>
        <div class="article-container">
            <div class="article-content flow">
                {{content}}
            </div>
            {{#if @@enableDisques}}
            <div class="article-comments">
                <div id="disqus_thread"></div>
            </div>
            <script>
                // Use for the first page load, afterwards everything can be handled in js.
                var disqus_identifier = '{{post.id}}';
            </script>
            {{/if}}
            {{#if "@@isso-link"}}
            <section id="isso-thread"></section>
            {{/if}}
        </div>
    </div>
</article>
{{/post}}
